                <!-- Main content -->
                <section class="content">
                    {% block content %}
                    {% endblock %}
                </section><!-- /.content -->
            </div><!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="pull-right hidden-xs">
                    <b>Version</b> DEV
                </div>
                <strong>Powered by <a href="http://innovalangues.fr">Innovalangues</a>.</strong>
            </footer>
        </div><!-- ./wrapper -->

