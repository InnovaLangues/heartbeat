{% extends  "::base.html.twig" %}


{% block content %}

    <!-- Add server row -->
    <div class="row">
        <div class="col-xs-12">
            <a href="{{path('add_server')}}">
                <div class="btn btn-default pull-right"><i class="glyphicon glyphicon-plus"></i> Add a server</div>
            </a>
        </div>
    </div>
    <hr/>
    <!-- Server list -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>IP</th>
                                <th>Name</th>
                                <th>OS</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Delete</th>
                            </tr>

                            {% for server in servers %}

                                <tr>
                                    <td>{{ server.ip }}</td>
                                    <td>{{ server.name }}</td>
                                    <td>{{ server.os }}</td>                                   
                                    <td><span class="label label-success">Online</span></td>
                                    <td><a href="{{ path('server', {'id': server.uid}) }}">View</a></td>
                                    <td><a href="{{ path('delete_server', {'id': server.uid}) }}">Delete</a></td>
                                </tr>

                            {% endfor %}

                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>

{% endblock content %}

