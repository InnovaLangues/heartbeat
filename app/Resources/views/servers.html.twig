{% extends  "::base.html.twig" %}


{% block content %}

    <!-- Server list -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Server list</h3>
                    <div class="box-tools">
                        <div class="btn btn-primary pull-right"><i class="glyphicon glyphicon-plus"></i> Add a server</div>
                    </div>
                </div>
                <div class="box-body table-responsive">
                    <table class="table table-hover table-bordered">
                        <tbody>
                            <tr>
                                <th style="width: 20px">Status</th>
                                <th>Name</th>
                                <th>IP</th>
                            </tr>

                            {% for server in servers %}

                                <tr>
                                    <td>
                                    {% if server.status %}
                                        <span class="label bg-green">Online</span>
                                    {% else %}
                                        <span class="label bg-red">Offline</span>
                                    {% endif %}
                                    </td>
                                    <td><a href="{{ path('server', {'id': server.uid}) }}">{{ server.name }}</a></td>
                                    <td>{{ server.ip }}</td>                               
                                </tr>

                            {% endfor %}

                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>

{% endblock content %}

